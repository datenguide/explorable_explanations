{
  "name": "@datenguide/explorables",
  "version": "0.0.3",
  "description": "Cookbook to make statistics experienced haptically, visually and playfully.  Coming soon.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook  -s ./data -p 6006",
    "build-storybook": "build-storybook",
    "build": "webpack --mode production --display-modules",
    "prepublish": "rm -rf dist && yarn build",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "lint": "eslint . --ignore-pattern 'dist' --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier **/*.js --write"
  },
  "module": "dist/index.js",
  "files": [
    "dist",
    "data"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datenguide/explorables.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/datenguide/explorable_explanations/issues"
  },
  "homepage": "https://github.com/datenguide/explorable_explanations#readme",
  "dependencies": {
    "clsx": "^1.1.0",
    "d3-request": "^1.0.6",
    "react-map-gl": "^5.2.5",
    "topojson": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "4.2.5",
    "prettier": "2.0.4",
    "pretty-quick": "2.0.1",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "webpack-cli": "^3.3.11"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-map-gl": "^5.2.5"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "standard-react",
      "prettier",
      "prettier/react"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn pretty-quick"
    }
  }
}
